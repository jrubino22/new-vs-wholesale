                  name="options[{{ option.name | escape_once }}]">
                  {% for value in option.values %}
                    <option
                      value="{{ value | escape_once }}"
                      {% if option.selected_value == value %} selected="selected"{% endif %}>
                      {{ value | escape_once }}
                    </option>
                  {% endfor %}
                </select>
              </fieldset>
            {%- endif -%}
          </div>
        {% endfor %}
      </div>
    {% endunless %}

